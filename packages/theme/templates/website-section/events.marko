$ const {
  id,
  alias,
  name,
  pageNode
} = data;
$ const now = Date.now();

<theme-website-section-published-content-layout
  id=id
  alias=alias
  name=name
  page-node=pageNode
>
  <@query
    name="all-published-content"
    params={
      contentTypes: ["Event"],
      limit: 12,
      endingAfter: now,
      sortField: "startDate",
      sortOrder: "asc",
    }
  />
</theme-website-section-published-content-layout>
